{
  "manifest_version": 3,
  "name": "BookmarkPro Extension",
  "version": "0.1.0",
  "description": "현재 페이지를 BookmarkPro에 쉽게 저장하고 관리하세요",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "permissions": ["activeTab", "storage", "scripting", "identity", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["src/oauth-callback.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "BookmarkPro"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.ts"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
