{
  "extends": "@bookmark-pro/tsconfig/base.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bookmark-pro/ui": ["../../packages/ui/src"]
    },
    "types": ["chrome", "vite/client", "vite-plugin-svgr/client"]
  },
  "include": ["src", "popup.html", "manifest.json", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
