{
  "extends": "@bookmark-pro/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2017", // Next.js often prefers ES2017
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bookmark-pro/ui": ["../../packages/ui/dist"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
